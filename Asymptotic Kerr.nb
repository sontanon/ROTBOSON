Notebook[{
Cell[TextData[{
 "We first write the metric in both Lewis-Papapetrou and Boyer-Lindquist \
coordinates.\n",
 Cell[BoxData[
  FormBox[
   RowBox[{
    SubscriptBox["g", "LP"], "=", 
    RowBox[{
     RowBox[{
      RowBox[{"-", 
       RowBox[{"(", 
        RowBox[{
         SuperscriptBox["\[Alpha]", "2"], "-", 
         RowBox[{
          SuperscriptBox["R", "2"], 
          SuperscriptBox["sin", "2"], "\[Theta]", " ", 
          SuperscriptBox["H", "2"], 
          SuperscriptBox["\[CapitalOmega]", "2"]}]}], ")"}]}], 
      SuperscriptBox["dt", "2"]}], "+", 
     RowBox[{"2", 
      SuperscriptBox["R", "2"], 
      SuperscriptBox["sin", "2"], "\[Theta]", " ", 
      SuperscriptBox["H", "2"], "\[CapitalOmega]", " ", "dt", " ", 
      "d\[CurlyPhi]"}], "+", 
     RowBox[{
      SuperscriptBox["A", "2"], 
      SuperscriptBox["dR", "2"]}], "+", 
     RowBox[{
      SuperscriptBox["R", "2"], 
      SuperscriptBox["A", "2"], 
      SuperscriptBox["d\[Theta]", "2"]}], "+", 
     RowBox[{
      SuperscriptBox["R", "2"], 
      SuperscriptBox["sin", "2"], "\[Theta]", " ", 
      SuperscriptBox["H", "2"], 
      SuperscriptBox["d\[CurlyPhi]", "2"]}]}]}], TraditionalForm]],
  FormatType->"TraditionalForm",ExpressionUUID->
  "e9abf5cb-8725-46aa-b9e3-850829df4673"],
 "\n",
 Cell[BoxData[
  FormBox[
   RowBox[{
    SubscriptBox["g", "BL"], "=", 
    RowBox[{
     RowBox[{
      RowBox[{"-", 
       RowBox[{"(", 
        RowBox[{"1", "-", 
         FractionBox[
          RowBox[{"2", "M", " ", "r"}], 
          RowBox[{
           SuperscriptBox["r", "2"], "+", 
           RowBox[{
            SuperscriptBox["a", "2"], 
            SuperscriptBox["cos", "2"], "\[Theta]"}]}]]}], ")"}]}], 
      SuperscriptBox["dt", "2"]}], "-", 
     RowBox[{
      FractionBox[
       RowBox[{"4", " ", "M", " ", "a", " ", "r"}], 
       RowBox[{
        SuperscriptBox["r", "2"], "+", 
        RowBox[{
         SuperscriptBox["a", "2"], 
         SuperscriptBox["cos", "2"], "\[Theta]"}]}]], 
      SuperscriptBox["sin", "2"], "\[Theta]", " ", "dt", " ", 
      "d\[CurlyPhi]"}], "+", 
     RowBox[{
      FractionBox[
       RowBox[{
        SuperscriptBox["r", "2"], "+", 
        RowBox[{
         SuperscriptBox["a", "2"], 
         SuperscriptBox["cos", "2"], "\[Theta]"}]}], 
       RowBox[{
        SuperscriptBox["r", "2"], "+", 
        SuperscriptBox["a", "2"], "-", 
        RowBox[{"2", "M", " ", "r"}]}]], 
      SuperscriptBox["dr", "2"]}], "+", 
     RowBox[{
      RowBox[{"(", 
       RowBox[{
        SuperscriptBox["r", "2"], "+", 
        RowBox[{
         SuperscriptBox["a", "2"], 
         SuperscriptBox["cos", "2"], "\[Theta]"}]}], ")"}], 
      SuperscriptBox["d\[Theta]", "2"]}], "+", 
     RowBox[{
      RowBox[{"(", 
       RowBox[{
        SuperscriptBox["r", "2"], "+", 
        SuperscriptBox["a", "2"], "+", 
        RowBox[{
         FractionBox[
          RowBox[{"2", " ", "M", " ", 
           SuperscriptBox["a", "2"], "r"}], 
          RowBox[{
           SuperscriptBox["r", "2"], "+", 
           RowBox[{
            SuperscriptBox["a", "2"], 
            SuperscriptBox["cos", "2"], "\[Theta]"}]}]], 
         SuperscriptBox["sin", "2"], "\[Theta]"}]}], ")"}], 
      SuperscriptBox["sin", "2"], "\[Theta]", " ", 
      SuperscriptBox["d\[CurlyPhi]", "2"]}]}]}], TraditionalForm]],
  FormatType->"TraditionalForm",ExpressionUUID->
  "e1f454be-8d4b-4fca-a024-8b1036113449"],
 "\nNotice that the radial coordinates are different in the above \
expressions. However, we posit that the angular and time coordinates are the \
same. From this we can immediately see that\n",
 Cell[BoxData[
  FormBox[
   RowBox[{
    RowBox[{
     RowBox[{
      RowBox[{
       SuperscriptBox["R", "2"], "(", 
       RowBox[{"r", ",", "\[Theta]"}], ")"}], 
      RowBox[{
       SuperscriptBox["A", "2"], "(", 
       RowBox[{"r", ",", "\[Theta]"}], ")"}]}], "=", 
     RowBox[{
      SuperscriptBox["r", "2"], "+", 
      RowBox[{
       SuperscriptBox["a", "2"], 
       SuperscriptBox["cos", "2"], "\[Theta]"}]}]}], ",", 
    "\[IndentingNewLine]", 
    RowBox[{
     RowBox[{
      RowBox[{
       SuperscriptBox["R", "2"], "(", 
       RowBox[{"r", ",", "\[Theta]"}], ")"}], 
      RowBox[{
       SuperscriptBox["H", "2"], "(", 
       RowBox[{"r", ",", "\[Theta]"}], ")"}]}], "=", 
     RowBox[{
      SuperscriptBox["r", "2"], "+", 
      SuperscriptBox["a", "2"], "+", 
      RowBox[{
       FractionBox[
        RowBox[{"2", " ", "M", " ", 
         SuperscriptBox["a", "2"], "r"}], 
        RowBox[{
         SuperscriptBox["r", "2"], "+", 
         RowBox[{
          SuperscriptBox["a", "2"], 
          SuperscriptBox["cos", "2"], "\[Theta]"}]}]], 
       SuperscriptBox["sin", "2"], "\[Theta]"}]}]}], ",", 
    "\[IndentingNewLine]", 
    RowBox[{
     RowBox[{
      RowBox[{
       SuperscriptBox["R", "2"], "(", 
       RowBox[{"r", ",", "\[Theta]"}], ")"}], 
      RowBox[{
       SuperscriptBox["H", "2"], "(", 
       RowBox[{"r", ",", "\[Theta]"}], ")"}], 
      RowBox[{"\[CapitalOmega]", "(", 
       RowBox[{"r", ",", "\[Theta]"}], ")"}]}], "=", 
     RowBox[{"-", 
      FractionBox[
       RowBox[{"2", "M", " ", "a", " ", "r"}], 
       RowBox[{"(", 
        RowBox[{
         SuperscriptBox["r", "2"], "+", 
         RowBox[{
          SuperscriptBox["a", "2"], 
          SuperscriptBox["cos", "2"], "\[Theta]"}]}], ")"}]]}]}], ",", 
    "\[IndentingNewLine]", 
    RowBox[{
     RowBox[{
      RowBox[{
       SuperscriptBox["\[Alpha]", "2"], "(", 
       RowBox[{"r", ",", "\[Theta]"}], ")"}], "-", 
      RowBox[{
       RowBox[{
        SuperscriptBox["R", "2"], "(", 
        RowBox[{"r", ",", "\[Theta]"}], ")"}], 
       SuperscriptBox["sin", "2"], "\[Theta]", " ", 
       RowBox[{
        SuperscriptBox["H", "2"], "(", 
        RowBox[{"r", ",", "\[Theta]"}], ")"}], " ", 
       RowBox[{
        SuperscriptBox["\[CapitalOmega]", "2"], "(", 
        RowBox[{"r", ",", "\[Theta]"}], ")"}]}]}], "=", 
     RowBox[{"1", "-", 
      FractionBox[
       RowBox[{"2", " ", "M", " ", "r"}], 
       RowBox[{
        SuperscriptBox["r", "2"], "+", 
        RowBox[{
         SuperscriptBox["a", "2"], 
         SuperscriptBox["cos", "2"], "\[Theta]"}]}]]}]}], ",", 
    "\[IndentingNewLine]", 
    RowBox[{
     RowBox[{
      SuperscriptBox[
       RowBox[{"(", 
        FractionBox["dR", "dr"], ")"}], "2"], 
      RowBox[{
       SuperscriptBox["A", "2"], "(", 
       RowBox[{"r", ",", "\[Theta]"}], ")"}]}], "=", 
     FractionBox[
      RowBox[{
       SuperscriptBox["r", "2"], "+", 
       RowBox[{
        SuperscriptBox["a", "2"], 
        SuperscriptBox["cos", "2"], "\[Theta]"}]}], 
      RowBox[{
       SuperscriptBox["r", "2"], "+", 
       SuperscriptBox["a", "2"], "-", 
       RowBox[{"2", "M", " ", "r"}]}]]}]}], TraditionalForm]],
  FormatType->"TraditionalForm",ExpressionUUID->
  "70dcbac1-acad-43db-a719-59473bc8439e"],
 "\nFrom the first equation and last equations we have \n",
 Cell[BoxData[
  FormBox[
   RowBox[{
    RowBox[{
     FractionBox["1", "R"], 
     FractionBox["dR", "dr"]}], "=", 
    FractionBox["1", 
     SqrtBox[
      RowBox[{
       SuperscriptBox["r", "2"], "+", 
       SuperscriptBox["a", "2"], "-", 
       RowBox[{"2", "M", " ", "r"}]}]]]}], TraditionalForm]],
  FormatType->"TraditionalForm",ExpressionUUID->
  "1a5f6ecc-86a7-49cc-9c5e-9b876225d835"],
 ".\nThis differential equation can be readily integrated as\n",
 Cell[BoxData[
  FormBox[
   RowBox[{
    RowBox[{
     RowBox[{"R", "(", "r", ")"}], "=", 
     RowBox[{"C", "(", 
      RowBox[{
       SqrtBox[
        RowBox[{
         SuperscriptBox["r", "2"], "+", 
         SuperscriptBox["a", "2"], "-", 
         RowBox[{"2", " ", "M", " ", "r"}]}]], "+", "r", " ", "-", " ", "M"}],
       ")"}]}], ","}], TraditionalForm]],
  FormatType->"TraditionalForm",ExpressionUUID->
  "6777bac8-3702-45fb-aad2-7065d04eba83"],
 "\nwhere ",
 Cell[BoxData[
  FormBox["C", TraditionalForm]],
  FormatType->"TraditionalForm",ExpressionUUID->
  "396d2f81-d78b-4f17-b375-4454ceb2e3f0"],
 " is a constant. If we want that ",
 Cell[BoxData[
  FormBox[
   RowBox[{"R", "\[Rule]", " ", "r"}], TraditionalForm]],
  FormatType->"TraditionalForm",ExpressionUUID->
  "4881d798-d6a5-4cdc-a73d-6521afafe28c"],
 " in the asymptotic limit, we set ",
 Cell[BoxData[
  FormBox[
   RowBox[{"C", "=", 
    FractionBox["1", "2"]}], TraditionalForm]],
  FormatType->"TraditionalForm",ExpressionUUID->
  "6b5d7bab-93c2-492c-bfd4-540cae027bc6"],
 ".\nConversely, we can now solve ",
 Cell[BoxData[
  FormBox[
   RowBox[{
    RowBox[{"r", "(", "R", ")"}], "."}], TraditionalForm]],
  FormatType->"TraditionalForm",ExpressionUUID->
  "ac419edd-5b0a-4e20-8039-6adc13609dcd"]
}], "Text",
 CellChangeTimes->{{3.788775194714245*^9, 3.788775761944224*^9}, {
  3.788775804639995*^9, 3.7887763795517263`*^9}, {3.7887770233998337`*^9, 
  3.788777025780955*^9}},ExpressionUUID->"21959f01-ee3b-4a82-b8a3-\
ada14427cae7"],

Cell[CellGroupData[{

Cell[BoxData[
 RowBox[{"$Assumptions", "=", 
  RowBox[{"{", 
   RowBox[{
    RowBox[{"a", ">", "0"}], ",", 
    RowBox[{"M", ">", "0"}], ",", 
    RowBox[{"r", ">", "0"}]}], "}"}]}]], "Input",
 CellChangeTimes->{{3.7887764421350574`*^9, 3.7887764576580143`*^9}},
 CellLabel->"In[1]:=",ExpressionUUID->"a587bef1-a7a8-45cb-80fd-3cd43d66197c"],

Cell[BoxData[
 RowBox[{"{", 
  RowBox[{
   RowBox[{"a", ">", "0"}], ",", 
   RowBox[{"M", ">", "0"}], ",", 
   RowBox[{"r", ">", "0"}]}], "}"}]], "Output",
 CellChangeTimes->{3.7887764599801784`*^9},
 CellLabel->"Out[1]=",ExpressionUUID->"6b797951-4931-4b36-aec0-7f599dd4561f"]
}, Open  ]],

Cell[CellGroupData[{

Cell[BoxData[
 RowBox[{"Solve", "[", 
  RowBox[{
   RowBox[{"R", "\[Equal]", 
    RowBox[{
     FractionBox["1", "2"], 
     RowBox[{"(", 
      RowBox[{
       RowBox[{"Sqrt", "[", 
        RowBox[{
         SuperscriptBox["r", "2"], "+", 
         SuperscriptBox["a", "2"], "-", 
         RowBox[{"2", " ", "M", " ", "r"}]}], "]"}], "+", "r", " ", "-", " ", 
       "M"}], ")"}]}]}], ",", "r"}], "]"}]], "Input",
 CellChangeTimes->{{3.788776381239441*^9, 3.7887764150101795`*^9}},
 CellLabel->"In[2]:=",ExpressionUUID->"6019be24-3078-49c3-a9d9-dd61bc2d1514"],

Cell[BoxData[
 RowBox[{"{", 
  RowBox[{"{", 
   RowBox[{"r", "\[Rule]", 
    FractionBox[
     RowBox[{
      RowBox[{"-", 
       SuperscriptBox["a", "2"]}], "+", 
      SuperscriptBox["M", "2"], "+", 
      RowBox[{"4", " ", "M", " ", "R"}], "+", 
      RowBox[{"4", " ", 
       SuperscriptBox["R", "2"]}]}], 
     RowBox[{"4", " ", "R"}]]}], "}"}], "}"}]], "Output",
 CellChangeTimes->{3.7887764628109775`*^9},
 CellLabel->"Out[2]=",ExpressionUUID->"65d50ff0-9943-4c5e-872b-be5e014afb00"]
}, Open  ]],

Cell[TextData[{
 "In other words, ",
 Cell[BoxData[
  FormBox[
   RowBox[{
    RowBox[{"r", "(", "R", ")"}], "=", 
    RowBox[{"R", "+", "M", "+", 
     FractionBox[
      RowBox[{
       SuperscriptBox["M", "2"], "-", 
       SuperscriptBox["a", "2"]}], 
      RowBox[{"4", " ", "R"}]]}]}], TraditionalForm]],
  FormatType->"TraditionalForm",ExpressionUUID->
  "cb4f0ca3-1af9-4d19-8de6-748f8f159638"],
 ".\nWe would now like to solve for the constants ",
 Cell[BoxData[
  FormBox[
   RowBox[{"a", ",", " ", "M"}], TraditionalForm]],
  FormatType->"TraditionalForm",ExpressionUUID->
  "873767f6-4145-43fb-9a6b-7033ebc858ac"],
 ". Remember that ",
 Cell[BoxData[
  FormBox[
   RowBox[{"J", "=", 
    RowBox[{"M", " ", "a"}]}], TraditionalForm]],
  FormatType->"TraditionalForm",ExpressionUUID->
  "dc0f9022-29ef-4e10-ab94-fe4b11e8862f"],
 ".\nBy rearranging some equations we have\n",
 Cell[BoxData[
  FormBox[
   RowBox[{
    RowBox[{
     RowBox[{"M", " ", "a", " ", "r"}], "=", 
     RowBox[{
      RowBox[{"-", 
       FractionBox["1", "2"]}], 
      SuperscriptBox["R", "4"], 
      SuperscriptBox["A", "2"], 
      SuperscriptBox["H", "2"], "\[CapitalOmega]"}]}], ",", 
    "\[IndentingNewLine]", 
    RowBox[{
     RowBox[{"M", " ", "r"}], " ", "=", " ", 
     RowBox[{
      FractionBox[
       RowBox[{
        SuperscriptBox["R", "2"], 
        SuperscriptBox["A", "2"]}], "2"], 
      RowBox[{
       RowBox[{"(", 
        RowBox[{"1", "-", 
         SuperscriptBox["a", "2"], "+", 
         RowBox[{
          SuperscriptBox["R", "2"], 
          SuperscriptBox["sin", "2"], "\[Theta]", " ", 
          SuperscriptBox["H", "2"], 
          SuperscriptBox["\[CapitalOmega]", "2"]}]}], ")"}], "."}]}]}]}], 
   TraditionalForm]],
  FormatType->"TraditionalForm",ExpressionUUID->
  "dcd73566-a7b3-47e8-9723-db3f5e1b6b65"],
 "\nThus,\n",
 Cell[BoxData[
  FormBox[
   RowBox[{"a", "=", 
    RowBox[{"-", 
     FractionBox[
      RowBox[{
       SuperscriptBox["R", "2"], 
       SuperscriptBox["H", "2"], "\[CapitalOmega]"}], 
      RowBox[{"(", 
       RowBox[{"1", "-", 
        SuperscriptBox["\[Alpha]", "2"], "+", 
        RowBox[{
         SuperscriptBox["R", "2"], 
         SuperscriptBox["sin", "2"], "\[Theta]", " ", 
         SuperscriptBox["H", "2"], " ", 
         SuperscriptBox["\[CapitalOmega]", "2"]}]}], ")"}]]}]}], 
   TraditionalForm]],
  FormatType->"TraditionalForm",ExpressionUUID->
  "03f9b21d-fbf3-4eb1-b0b6-2feafb0bed18"],
 "\nFinally, we need an expression for ",
 Cell[BoxData[
  FormBox["M", TraditionalForm]],
  FormatType->"TraditionalForm",ExpressionUUID->
  "e0e92e3b-1c71-4fdd-8b1d-abfa11b0cb23"],
 ".\nThis can be done by inserting ",
 Cell[BoxData[
  FormBox[
   RowBox[{"r", "(", "R", ")"}], TraditionalForm]],
  FormatType->"TraditionalForm",ExpressionUUID->
  "95f2ea83-bf30-41a2-94b3-779007f0a24f"],
 ":\n",
 Cell[BoxData[
  FormBox[
   RowBox[{
    RowBox[{
     FractionBox[
      RowBox[{
       SuperscriptBox["R", "2"], " ", 
       SuperscriptBox["A", "2"]}], "2"], 
     RowBox[{"(", 
      RowBox[{"1", "-", 
       SuperscriptBox["\[Alpha]", "2"], "+", 
       RowBox[{
        SuperscriptBox["R", "2"], 
        SuperscriptBox["sin", "2"], "\[Theta]", " ", 
        SuperscriptBox["H", "2"], 
        SuperscriptBox["\[CapitalOmega]", "2"]}]}], ")"}]}], "=", 
    RowBox[{"M", "(", 
     RowBox[{"R", " ", "+", " ", "M", " ", "+", " ", 
      FractionBox[
       RowBox[{
        SuperscriptBox["M", "2"], "-", 
        SuperscriptBox["a", "2"]}], 
       RowBox[{"4", " ", "R"}]]}], ")"}]}], TraditionalForm]],
  FormatType->"TraditionalForm",ExpressionUUID->
  "d63edcca-49e3-46ec-9179-c71ad93134dd"],
 ".\nRewritten as a cubic equation in ",
 Cell[BoxData[
  FormBox["M", TraditionalForm]],
  FormatType->"TraditionalForm",ExpressionUUID->
  "b08d7fe2-a535-4b7e-9264-434c2bd6d21f"],
 ":\n",
 Cell[BoxData[
  FormBox[
   RowBox[{
    RowBox[{
     SuperscriptBox["M", "3"], "+", 
     RowBox[{"4", "R", " ", 
      SuperscriptBox["M", "2"]}], "+", 
     RowBox[{
      RowBox[{"(", 
       RowBox[{
        RowBox[{"4", 
         SuperscriptBox["R", "2"]}], "-", 
        SuperscriptBox["a", "2"]}], ")"}], "M"}], "-", 
     RowBox[{"2", 
      SuperscriptBox["R", "3"], 
      RowBox[{
       SuperscriptBox["A", "2"], "(", 
       RowBox[{"1", "-", 
        SuperscriptBox["\[Alpha]", "2"], "+", 
        RowBox[{
         SuperscriptBox["R", "2"], 
         SuperscriptBox["sin", "2"], "\[Theta]", " ", 
         SuperscriptBox["H", "2"], " ", 
         SuperscriptBox["\[CapitalOmega]", "2"]}]}], ")"}]}]}], "=", "0"}], 
   TraditionalForm]],
  FormatType->"TraditionalForm",ExpressionUUID->
  "2286c266-c105-4696-a79c-53a2a08cd26c"],
 "."
}], "Text",
 CellChangeTimes->{{3.7887764820260363`*^9, 3.788776590063137*^9}, {
